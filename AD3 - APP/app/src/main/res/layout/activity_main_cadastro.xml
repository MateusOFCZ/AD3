<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.unisul.ad3.MainCadastro">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorGreenButton"
        app:titleTextColor="@color/colorText"
        app:title="@string/registro_titulo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/activity_main_cadastro_infos"/>
        <include layout="@layout/activity_main_cadastro_pessoal"/>
        <include layout="@layout/activity_main_cadastro_botao"/>
    </LinearLayout>

    </ScrollView>
</LinearLayout>